<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/timecardItemParent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="Yoda"
            android:id="@+id/timecardItemStudentName"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#888888"
            android:gravity="center_horizontal"
            android:textSize="13sp"
            android:text="Thu  Jan 02, 2017 12:23 pm"
            android:layout_marginRight="10dp"
            android:id="@+id/timecardItemDateTime"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#888888"
            android:text="No Show"
            android:id="@+id/timecardShowedStatus"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#888888"
            android:text="Not Eligible"
            android:visibility="invisible"
            android:id="@+id/timecardEligibleStatus"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textColor="#888888"
            android:visibility="invisible"
            android:id="@+id/makeUpStatus"/>
    </LinearLayout>

</LinearLayout>