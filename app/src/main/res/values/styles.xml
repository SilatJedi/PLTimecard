<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="popupTheme">@style/menuPopupTheme</item>
    </style>

    <style name="menuPopupTheme" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/colorMenuPopupBackground</item>
        <item name="android:textColor">@color/colorMenuText</item>
    </style>
</resources>
