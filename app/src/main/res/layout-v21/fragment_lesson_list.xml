<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              tools:context="com.silatsaktistudios.plmgr.fragment.LessonListFragment">

    <EditText
        android:id="@+id/lessonSearchEditText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:elevation="2dp"
        android:background="@color/windowBackground"
        android:gravity="center"
        android:inputType="textNoSuggestions"
        android:hint="@string/search_by_name"
        android:imeOptions="actionDone"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/translucentBlack"
        android:textCursorDrawable="@drawable/edittext_cursor"/>

    <ListView
        android:id="@+id/lessonListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/lesson_list_item"
        android:layout_below="@+id/lessonSearchEditText"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        app:backgroundTint="@color/colorAccent"
        app:rippleColor="@color/translucentBlack"
        android:src="@drawable/plus"
        android:id="@+id/addLessonButton"/>

</RelativeLayout>
